<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

	<Preference
		android:key="pref_version"
		android:summary="@string/about_version_sum"
		android:title="@string/about_version_title" />

	<PreferenceCategory
		android:title="@string/about_links_cat">

		<Preference
			android:summary="@string/about_splatoon_link_sum"
			android:title="@string/about_splatoon_link_title">

			<intent
				android:action="android.intent.action.VIEW"
				android:data="@string/about_url_splatoon" />

			</Preference>

		<Preference
			android:summary="@string/about_splatoon_ink_sum"
			android:title="@string/about_splatoon_ink_title">

			<intent
				android:action="android.intent.action.VIEW"
				android:data="@string/about_url_splatoon_ink" />

		</Preference>

		<Preference
			android:summary="@string/about_more_link_sum"
			android:title="@string/about_more_link_title">

			<intent
				android:action="android.intent.action.VIEW"
				android:data="@string/about_url_outadev" />

		</Preference>

	</PreferenceCategory>
	<PreferenceCategory
		android:title="@string/about_legal_cat">

		<Preference
			android:summary="@string/about_legal_nintendo_sum"
			android:title="@string/about_legal_nintendo_title" />

		<Preference
			android:summary="@string/about_copyright_sum"
			android:title="@string/about_copyright_title" />

	</PreferenceCategory>
	<PreferenceCategory
		android:title="@string/about_oss_cat">

		<Preference
			android:summary="@string/about_oss_okhttp_sum"
			android:title="@string/about_oss_okhttp_title" />

	</PreferenceCategory>

</PreferenceScreen>